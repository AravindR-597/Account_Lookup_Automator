<section  class="topContainer">
  <div class="container">
    <div class="row">
      <div class="col-md-12 mt-5 headClass">
        <h4 class="text-center" style="font-weight: normal;">Search Account</h4>
        <form class="justify-content-center" id="searchForm" action="/" method="GET">
          <div class="active-cyan-3 active-cyan-4 mb-4">
            <input class="form-control shadow-none" id="search" name="search" type="text" placeholder="Enter The Name"
              onkeyup="searchFunction()" value="" aria-label="Search" autofocus>
          </div>
          <div class="text-center searchIcon">
            <button type="submit" class=" btn">Search</button>
          </div>

      </div>
      </form>
    </div>
  </div>
</section>

<section>
  <div class="container bodyClass mt-4">
    {{#if accounts}}
    <div class="row">

      {{#each accounts}}
      <div class="col-md-3 p-3">
        <div class="card" style="width: 17rem;height:13rem;border-color:#FCFBF1">
          <div class="card-body">
            <h3 class="card-subtitle mb-2">{{this.Number}}</h3>

            <h4 class="card-title text-muted">{{this.Name}}</h4>
            <div class="flex-base">
              <h5 class="card-text"> â‚¹ {{this.Denomination}}</h5>

              <button
                onclick="addToList('{{this.Number}}','{{this.Name}}','{{this.Denomination}}','{{this.default}}','{{this.CNumber}}')"
                class="btn" id="addToList" role="button"><span>+ </span>Add</button>
            </div>

          </div>
        </div>
      </div>
      {{/each}}
    </div>
    {{else}}
    <h2 class="text-center">{{status}}</h2>
    {{/if}}
  </div>
</section>
